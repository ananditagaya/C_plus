(A)
#include <iostream>
using namespace std;
int main(){
int num;
  cout<<"kindly enter the num:- ";
  cin>>num;
  for (int i=2;i<num;i++){
     if (num%i==0){
      cout<<"it is not a  prime num"<<endl;
      return 0;
  }
 }
cout<< "it is a prime num";

  return 0;
}

(B)
#include <iostream>
using namespace std;
int main(){
  int n;
  cout<<"kindly enter the num"<<endl;
  cin>>n;
  cout << "The factors of " << n << " are: ";
  int count=0;
  for (int i=1;i<n;i++){
    if (n%i==0){
      cout << i << " "; 
    count++; 
    }
  }
  cout << endl;
  return 0;
}
(C)
 #include <iostream>
using namespace std;
int main(){
  int n;
  cout<<"kindlly enter the num "<<endl;
  cin>>n;
  if
   int nextPrime = n + 1;
    while (true) {
        int i;
        for (i = 2; i * i <= nextPrime; i++) {
            if (nextPrime % i == 0) break; 
        }
        if (i * i > nextPrime) break; 
        nextPrime++;
    }

    cout << "Next higher prime: " << nextPrime << endl;
    return 0;
  
}
